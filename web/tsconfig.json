{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": false,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/artifact"
  ]
}